[url "https://"]
	insteadOf = git://

[url "https://github"]
	insteadOf = git://github

[user] 
	name = Ben Palmer
	email = ben.palmer@playmakercrm.com

[core]
	autocrlf = input
	safecrlf = true
	excludesfile = /Users/ben/.gitignore_global

[alias]
	co = checkout 
	ci = commit -m
	cur = rev-parse --short head 
	st = status
	br = branch
	t = tag
	cp = cherry-pickg q
	cur = rev-parse --short HEAD
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	lg =  log --abbrev-commit --decorate --name-status -10 --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)%ar%C(reset), %C(bold red)%cn%C(reset)%C(bold yellow)%d%C(reset) %n%C(yellow)%s%n%C(reset)'

[merge]
	tool = opendiff

[color]
	ui = true
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
 	meta = yellow bold
 	frag = magenta bold
 	old = red bold
 	new = green bold

[color "status"]
  	added = yellow bold
  	changed = red bold
  	untracked = cyan bold

[http]
	postBuffer = 524288000

[credential]
	helper = osxkeychain

[diff]
    tool = colordiff

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
	
[push]
	default = simple
	followTags = true
